# code page accueil
# Import des noms du module
from tkinter import *

# Création d'un objet "fenêtre"
fenetre = Tk()

# Titre de la fenêtre
fenetre.title("Snake - Acceuil")

# Taille de la fenêtre
tk = Tk()
 
w, h = fenetre.winfo_screenwidth(), fenetre.winfo_screenheight()
fenetre.geometry("%dx%d" % (w, h))

# Récupération d'une image pour changer le logo par défaut
fenetre.iconbitmap("logo.ico1.png")

# Modification de la couleur du fond de la fenêtre
fenetre.config(background='#9DCD5A')

# Titre (Label)
titre = Label(fenetre, text = "Snake Game", font="Calibri, 30", fg='pink', bg='#9DCD5A')
# Affichage du titre
#titre.pack(side=BOTTOM) # Pour positionner en bas
#titre.pack(side=RIGHT) # Pour positionner à droite
titre.pack(expand=YES)

# Sous Titre (Label)
#sous_titre = Label(fenetre, text = "Nouvel élément", font="Calibri, 20", fg='pink', bg='#3396ff')
# Affichage du sous titre à une position définie
#sous_titre.place(x=100, y=100)

